@{
    ViewBag.Title = "Schedule Details";
}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .itinerary-card {
            border: 1px solid #e0e0e0;
            border-radius: 0.5rem;
            padding: 1rem;
            margin-bottom: 1rem;
            background-color: #ffffff;
        }

            .itinerary-card img {
                max-width: 100%;
                border-radius: 0.5rem;
            }

            .itinerary-card .step-number {
                background-color: #ff4081;
                color: #fff;
                border-radius: 50%;
                padding: 0.5rem;
                width: 2rem;
                height: 2rem;
                display: flex;
                justify-content: center;
                align-items: center;
            }

            .itinerary-card .icon {
                margin-right: 0.5rem;
            }

            .itinerary-card .action-icons i {
                margin-right: 0.5rem;
                cursor: pointer;
            }

        .carousel-control-prev,
        .carousel-control-next {
            width: auto;
        }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            background-color: #000;
        }

        .tab-pane {
            padding: 1rem;
        }
    </style>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-9">
                <!-- 主內容區域 -->
            </div>
            <div class="col-md-3 p-0 bg-white shadow-sm">
                <div class="d-flex justify-content-between align-items-center p-3 border-bottom">
                    <h5 class="mb-0">Schedule ID: @ViewBag.ScheduleId</h5>
                    <div>
                        <button type="button" class="btn btn-light btn-sm"><i class="bi bi-arrow-repeat"></i></button>
                        <button type="button" class="btn btn-light btn-sm"><i class="bi bi-x-lg"></i></button>
                    </div>
                </div>
                <div id="daysCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="d-flex justify-content-around">
                                <button class="btn btn-link" id="overview-tab" data-bs-toggle="tab" data-bs-target="#overview" type="button" role="tab" aria-controls="overview" aria-selected="false">總覽頁</button>
                                <button class="btn btn-link" id="day1-tab" data-bs-toggle="tab" data-bs-target="#day1" type="button" role="tab" aria-controls="day1" aria-selected="true">第1天</button>
                                <button class="btn btn-link" id="day2-tab" data-bs-toggle="tab" data-bs-target="#day2" type="button" role="tab" aria-controls="day2" aria-selected="false">第2天</button>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <div class="d-flex justify-content-around">
                                <button class="btn btn-link" id="day3-tab" data-bs-toggle="tab" data-bs-target="#day3" type="button" role="tab" aria-controls="day3" aria-selected="false">第3天</button>
                                <button class="btn btn-link" id="day4-tab" data-bs-toggle="tab" data-bs-target="#day4" type="button" role="tab" aria-controls="day4" aria-selected="false">第4天</button>
                                <button class="btn btn-link" id="add-tab" type="button">+</button>
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#daysCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#daysCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    </button>
                </div>

                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade" id="overview" role="tabpanel" aria-labelledby="overview-tab">
                        <!-- 總覽頁內容 -->
                    </div>
                    <div class="tab-pane fade show active" id="day1" role="tabpanel" aria-labelledby="day1-tab">
                        <div class="list-group">
                            <div class="itinerary-card">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="step-number">1</div>
                                    <small>16:00</small>
                                </div>
                                <img src="/3.jpg" class="img-fluid rounded mb-2" alt="高鐵台南站">
                                <h5 class="mt-3">高鐵台南站</h5>
                                <p>100 分</p>
                            </div>
                            <div class="itinerary-card">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="step-number">2</div>
                                    <small>16:30</small>
                                </div>
                                <img src="/2.jpg" class="img-fluid rounded mb-2" alt="高鐵桃園站">
                                <h5 class="mt-3">高鐵桃園站</h5>
                                <p>停留 1 時</p>
                                <small>14 分 - 租車</small>
                            </div>
                            <div class="itinerary-card">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="step-number">3</div>
                                    <small>17:44</small>
                                </div>
                                <img src="/1.jpg" class="img-fluid rounded mb-2" alt="P4 Parking entrance">
                                <h5 class="mt-3">P4 Parking entrance</h5>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="day2" role="tabpanel" aria-labelledby="day2-tab">
                        <!-- 第2天內容 -->
                    </div>
                    <div class="tab-pane fade" id="day3" role="tabpanel" aria-labelledby="day3-tab">
                        <!-- 第3天內容 -->
                    </div>
                    <div class="tab-pane fade" id="day4" role="tabpanel" aria-labelledby="day4-tab">
                        <!-- 第4天內容 -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script>
        var myCarousel = document.querySelector('#daysCarousel');
        var carousel = new bootstrap.Carousel(myCarousel, {
            interval: false,
            wrap: false
        });
    </script>

