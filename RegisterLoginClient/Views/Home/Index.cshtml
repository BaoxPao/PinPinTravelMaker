@section Styles {
    <link href="~/css/animate.css" rel="stylesheet" />
    <style>
        .hero-section {
            position: relative;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
            overflow: hidden;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url("images/3.1.jpg");
            background-size: cover;
            background-position: center;
            z-index: 0;
            animation: zoomIn 20s infinite;
        }

        .hero-section::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1;
        }

        .hero-section > div {
            position: relative;
            z-index: 2;
        }

        .hero-section .btn {
            margin: 0 10px;
        }

        @@keyframes zoomIn {
            0% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.1);
            }
            100% {
                transform: scale(1);
            }
        }
    </style>
}

