<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RegisterLoginClient</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.0/css/bootstrap.min.css" asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PinPinClient.styles.css" asp-append-version="true" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PinPinClient</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Expense" asp-action="Index">PoleEast</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Schdules">Schdules</a> <!--bao-->
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="SearchSpots" asp-action="Index">搜尋景點</a>
                        </li>
                    </ul>
                </div>
                <ul class="navbar-nav" style="float:right">
                    <li class="nav-item">
                        <a id="register" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Register">註冊會員</a>
                    </li>
                    <li class="nav-item">
                        <a id="login" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">立即登入</a>
                    </li>
                    <li class="nav-item">
                        <a id="MemberInfo" class="nav-link text-dark" style="display:none" asp-area="" asp-controller="Home" asp-action="MemberInfo">會員資料</a>
                    </li>
                    <li class="nav-item">
                        <a id="logout" class="nav-link text-dark" style="display:none" asp-area="" asp-controller="" asp-action="">登出</a>
                    </li>
                </ul>
                <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#sideBarOffcanvas" aria-controls="sideBarOffcanvas">
                    側邊欄
                </button>
            </div>
        </nav>
    </header>

    <!-- 聊天室側邊欄 offcanvas start -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="sideBarOffcanvas" aria-labelledby="sideBarOffcanvasLabel">
        <div class="offcanvas-header">
            <!-- 側邊欄頁籤Navs and tabs start -->
            <ul class="nav nav-tabs" id="sideBarOffcanvasLabel">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#">願望清單</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">聊天室</a>
                </li>
            </ul>
            <!-- 側邊欄頁籤Navs and tabs end -->
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <!-- accordion start -->
            <div class="accordion accordion-flush" id="wishlist_accordionFlush">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="flush-headingOne">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                            願望清單＃1
                        </button>
                    </h2>
                    <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne"
                         data-bs-parent="#wishlist_accordionFlush">
                        <div class="accordion-body d-flex">
                            <!-- 行程卡片start -->
                            <div class="card m-1" style="width: 10rem;">
                                <img src="../images/wishlist1.jpg" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">行程1</h5>
                                    <p class="card-text">地址</p>
                                    <a href="#" class="btn btn-primary">加入行程</a>
                                </div>
                            </div>
                            <div class="card m-1" style="width: 10rem;">
                                <img src="../images/wishlist2.jpg" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">行程2</h5>
                                    <p class="card-text">地址</p>
                                    <a href="#" class="btn btn-primary">加入行程</a>
                                </div>
                            </div>
                            <!-- 行程卡片end -->
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="flush-headingTwo">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                            願望清單＃2
                        </button>
                    </h2>
                    <div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="flush-headingTwo"
                         data-bs-parent="#wishlist_accordionFlush">
                        <div class="accordion-body d-flex">
                            <div class="card m-1" style="width: 10rem;">
                                <img src="../images/wishlist1.jpg" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">行程1</h5>
                                    <p class="card-text">地址</p>
                                    <a href="#" class="btn btn-primary">加入行程</a>
                                </div>
                            </div>
                            <div class="card m-1" style="width: 10rem;">
                                <img src="../images/wishlist2.jpg" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">行程2</h5>
                                    <p class="card-text">地址</p>
                                    <a href="#" class="btn btn-primary">加入行程</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="flush-headingThree">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#flush-collapseThree" aria-expanded="false"
                                aria-controls="flush-collapseThree">
                            願望清單＃3
                        </button>
                    </h2>
                    <div id="flush-collapseThree" class="accordion-collapse collapse"
                         aria-labelledby="flush-headingThree" data-bs-parent="#wishlist_accordionFlush">
                        <div class="accordion-body d-flex">
                            <div class="card m-1" style="width: 10rem;">
                                <img src="../images/wishlist1.jpg" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">行程1</h5>
                                    <p class="card-text">地址</p>
                                    <a href="#" class="btn btn-primary">加入行程</a>
                                </div>
                            </div>
                            <div class="card m-1" style="width: 10rem;">
                                <img src="../images/wishlist2.jpg" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">行程2</h5>
                                    <p class="card-text">地址</p>
                                    <a href="#" class="btn btn-primary">加入行程</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- accordion end -->
        </div>
    </div>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - RegisterLoginClient - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" asp-fallback-src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.0/js/bootstrap.min.js" asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/axios/axios.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script>
    $(document).ready(function () {
        // 初始化導航欄狀態
        updateNavbar();

        // 登出按鈕點擊事件
        $("#logout").on("click", function () {
            localStorage.removeItem('token');
            updateNavbar(); // 更新導航欄狀態
        });

        function updateNavbar() {
            const token = localStorage.getItem('token');
            if (!token) {
                $("#register").show();
                $("#login").show();
                $("#logout").hide();
                $("#MemberInfo").hide();
            } else {
                $("#register").hide();
                $("#login").hide();
                $("#logout").show();
                $("#MemberInfo").show();
            }
        }
    });
</script>
