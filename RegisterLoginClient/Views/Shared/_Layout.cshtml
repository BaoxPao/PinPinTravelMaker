<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RegisterLoginClient</title>
    <link href="~/lib/bootstrap/test/css/custom.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" asp-fallback-src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.0/js/bootstrap.bundle.min.js" asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
    <script src="~/lib/axios/axios.min.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://kit.fontawesome.com/66638a3835.js" type="text/javascript" asp-fallback-href="/lib/font-awesome/js/fontawesome.js"></script>
    <script src="~/js/site.js"></script>

    <style>
        body, html {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        .content {
            flex: 1;
        }

        footer {
            background-color: #f8f9fa;
            padding: 1rem 0;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid" id="vue-nav">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" width="100px" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark fs-5 fw-bold" asp-area="" asp-controller="Schdules" asp-action="Index">行程規劃</a> <!--bao-->
                        </li>
                    </ul>
                </div>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item" v-if="!isLogin">
                        <a id="register" class="nav-link text-dark fs-5 fw-bold" asp-controller="Home" asp-action="Register">註冊會員</a>
                    </li>
                    <li class="nav-item" v-if="!isLogin">
                        <a id="login" class="nav-link text-dark fs-5 fw-bold" asp-controller="Home" asp-action="Login">立即登入</a>
                    </li>
                    <li class="nav-item" v-if="isLogin">
                        <a id="MemberInfo" class="nav-link text-dark fs-5 fw-bold" asp-controller="Home" asp-action="MemberInfo">會員資料</a>
                    </li>
                    <li class="nav-item" v-if="isLogin">
                        <a id="logout" class="nav-link text-dark fs-5 fw-bold" v-on:click="logOut" href="#">登出</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class=".container-fluid">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="navbar navbar-light bg-light">
        <div class="container-fluid d-flex justify-content-center">
            <span class="text-muted"><a>© 2024 by PinPinTeam.</a></span>
        </div>
    </footer>
    <script>
        // $(document).ready(function () {
            // updateNavbar();

            // $("#logout").on("click", function () {
            //     localStorage.removeItem('token');
            //     updateNavbar();
            // });

            // function updateNavbar() {
            //     const token = localStorage.getItem('token');
            //     if (!token) {
            //         $("#register").show();
            //         $("#login").show();
            //         $("#logout").hide();
            //         $("#MemberInfo").hide();
            //     } else {
            //         $("#register").hide();
            //         $("#login").hide();
            //         $("#logout").show();
            //         $("#MemberInfo").show();
            //     }
            // }
            // });
            const { createApp, onMounted, ref } = Vue;

            createApp({
                setup() {
                    const isLogin = ref(false)

                    const getToken = () => {
                        const token = localStorage.getItem('token');
                        isLogin.value = token === null ? false : true;
                    }

                    const logOut = () => {
                        localStorage.removeItem('token');
                        getToken();
                    }

                    onMounted(() => {
                        getToken();
                    });

                    return {
                        isLogin,
                        logOut,
                    };
                }
            }).mount("#vue-nav")
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>