<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RegisterLoginClient</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RegisterLoginClient.styles.css" asp-append-version="true" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PinPinClient</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">PoleEast</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">bao</a>
                        </li>

                    </ul>
                </div>
                <ul class="navbar-nav" style="float:right">
                    <li class="nav-item">
                        <a id="register" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Register">註冊會員</a>
                    </li>
                    <li class="nav-item">
                        <a id="login" class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">立即登入</a>
                    </li>
                    <li class="nav-item">
                        <a id="MemberInfo" class="nav-link text-dark" style="display:none" asp-area="" asp-controller="Home" asp-action="MemberInfo">會員資料</a>
                    </li>
                    <li class="nav-item">
                        <a id="logout" class="nav-link text-dark" style="display:none" asp-area="" asp-controller="" asp-action="">登出</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - RegisterLoginClient - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script>
    $(document).ready(function () {
        // 初始化導航欄狀態
        updateNavbar();

        // 登出按鈕點擊事件
        $("#logout").on("click", function () {
            localStorage.removeItem('token');
            updateNavbar(); // 更新導航欄狀態
        });

        function updateNavbar() {
            const token = localStorage.getItem('token');
            if (!token) {
                $("#register").show();
                $("#login").show();
                $("#logout").hide();
                $("#MemberInfo").hide();
            } else {
                $("#register").hide();
                $("#login").hide();
                $("#logout").show();
                $("#MemberInfo").show();
            }
        }
    });
</script>
