<div id="vue-container">
    <!-- 第一層燈箱，用於顯示所有行程 -->
    <div class="modal fade" id="ScheduleModal" tabindex="-1" aria-labelledby="ScheduleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ScheduleModalLabel">分帳表</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div v-if="loading" class="text-center">
                        <i class="fas fa-spinner fa-spin fa-3x text-primary"></i>
                    </div>
                    <div v-else>
                        <div v-if="Object.keys(schedules).length > 0">
                            <table class="table table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>行程名稱</th>
                                        <th class="text-center">查看</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr v-for="(name, id) in schedules" :key="id" v-on:click="showModalWithData('SchedulExpenseModal',()=>getScheduleExpense(id, name))">
                                        <td>{{ name }}</td>
                                        <td class="text-center">
                                            <i class="fa-solid fa-arrow-right"></i>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div v-else>
                            <p class="text-center">目前沒有行程。</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 第二層燈箱，用於顯示選擇行程費用狀態 -->
    <div class="modal fade" id="SchedulExpenseModal" tabindex="-1" aria-labelledby="SchedulExpenseModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <i class="fa-solid fa-arrow-left me-auto" v-on:click="goBack" style="cursor: pointer;"></i>
                    <h5 class="modal-title" id="SchedulExpenseModalLabel">{{ scheduleName }}的分帳表</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div v-if="loading" class="text-center">
                        <i class="fas fa-spinner fa-spin fa-3x text-primary"></i>
                    </div>
                    <div v-else>
                        <div v-if="Object.keys(expenses).length > 0">
                            <table class="table table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>團員</th>
                                        <th class="text-end">總金額</th>
                                        <th class="text-end">
                                            <div class="d-flex justify-content-end align-items-center">
                                                剩餘金額
                                                <a tabindex="0" class="btn p-0 ms-1" role="button" data-bs-toggle="popover" data-bs-trigger="focus" title="剩餘金額?" data-bs-html="true" data-bs-content="總金額-已付金額=剩餘金額<br>*負數為你應該付出去多少錢">
                                                    <i class="fa-solid fa-circle-info"></i>
                                                </a>
                                            </div>
                                        </th>
                                        <th class="text-center">查看</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr v-for="expens in expenses" :key="expens.userId" v-on:click="showModalWithData('UserDetailModal',()=>getUserExpense(expens.userName, expens.userId))">
                                        <td>{{ expens.userName }}</td>
                                        <td class="text-end">{{ expens.balance }}$</td>
                                        <td class="text-end">{{ expens.isPaidBalance }}$</td>
                                        <td class="text-center">
                                            <i class="fa-solid fa-arrow-right" style="cursor: pointer;"></i>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="mt-3">
                                <p class="text-end"><strong>總應收金額: {{ totalBalance }}$</strong></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">詳細</button>
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">新增</button>
                </div>
            </div>
        </div>
    </div>

    <!-- 第三層燈箱，用於顯示選擇行程費用的某人與自己的費用關係 -->
    <div class="modal fade" id="UserDetailModal" tabindex="-1" aria-labelledby="UserDetailModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <i class="fa-solid fa-arrow-left me-auto" v-on:click="goBack" style="cursor: pointer;"></i>
                    <h5 class="modal-title" id="UserDetailModalLabel">{{ userName }}的詳細分帳表</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div v-if="loading" class="text-center">
                        <i class="fas fa-spinner fa-spin fa-3x text-primary"></i>
                    </div>
                    <div v-else>
                        <div v-if="Object.keys(userExpenses).length>0">
                            <table class="table table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>名稱</th>
                                        <th class="text-end">種類</th>
                                        <th class="text-center">已付款</th>
                                        <th class="text-end">金額</th>
                                        <th class="text-center">查看</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr v-for="expens in userExpenses" :key="expens.expenseId" v-on:click="">
                                        <td>{{expens.expenseName}}</td>
                                        <td class="text-end">{{expens.expenseCategory}}</td>
                                        <td class="text-center">
                                            <div v-if="expens.isPaid">
                                                <i class="fa-regular fa-square-check"></i>
                                            </div>
                                        </td>
                                        <td class="text-end">{{expens.amount}}$</td>
                                        <td class="text-center">
                                            <i class="fa-solid fa-arrow-right" style="cursor: pointer;"></i>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="mt-3 d-flex justify-content-between">
                                <p class="text-start mb-0"><strong>幣別:暫無</strong></p>
                                <p class="text-end mb-0"><strong>待收付金額: {{ totalUserBalance }}$</strong></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 完整分帳表燈箱，用於顯示完整的分帳表 -->
    <div class="modal fade" id="ExpenseModal" tabindex="-1" aria-labelledby="UserDetailModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <i class="fa-solid fa-arrow-left me-auto" v-on:click="goBack" style="cursor: pointer;"></i>
                    <h5 class="modal-title" id="UserDetailModalLabel">的詳細分帳表</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div v-if="loading" class="text-center">
                        <i class="fas fa-spinner fa-spin fa-3x text-primary"></i>
                    </div>
                    <div v-else>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>