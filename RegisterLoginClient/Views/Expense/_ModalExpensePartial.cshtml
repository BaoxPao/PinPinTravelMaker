<div id="vue-container">
    <div class="modal fade" id="ScheduleModal" tabindex="-1" aria-labelledby="ScheduleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ScheduleModalLabel">分帳表</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div v-if="loading" class="text-center">
                        <i class="fas fa-spinner fa-spin fa-3x text-primary"></i>
                    </div>
                    <div v-else>
                        <div v-if="Object.keys(schedules).length > 0">
                            <table class="table table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>行程名稱</th>
                                        <th class="text-center">查看</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr v-for="(name, id) in schedules" :key="id" v-on:click="getScheduleExpense(id, name)">
                                        <td>{{ name }}</td>
                                        <td class="text-center">
                                            <i class="fa-solid fa-arrow-right"></i>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div v-else>
                            <p class="text-center">目前沒有行程。</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 第二個燈箱，用於顯示選擇行程費用狀態 -->
    <div class="modal fade" id="ExpenseModal" tabindex="-1" aria-labelledby="ExpenseModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <i class="fa-solid fa-arrow-left me-auto" v-on:click="goBack" style="cursor: pointer;"></i>
                    <h5 class="modal-title" id="ExpenseModalLabel">{{ scheduleName }}的分帳表</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div v-if="loading" class="text-center">
                        <i class="fas fa-spinner fa-spin fa-3x text-primary"></i>
                    </div>
                    <div v-else>
                        <table class="table table-striped table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th>團員</th>
                                    <th>總金額</th>
                                    <th>剩餘金額</th>
                                    <th class="text-center">查看</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr v-for="expens in expenses" :key="expens.userName">
                                    <td>{{ expens.userName }}</td>
                                    <td>{{ expens.balance }}</td>
                                    <td>{{ expens.isPaidBalance }}</td>
                                    <td class="text-center">
                                        <i class="fa-solid fa-arrow-right" style="cursor: pointer;"></i>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">詳細</button>
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">新增</button>
                </div>
            </div>
        </div>
    </div>
</div>